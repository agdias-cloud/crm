pipeline {
  agent {
    kubernetes {
      yaml '''
apiVersion: v1
kind: Pod
metadata:
  name: buildah
spec:
  containers:
  - name: buildah
    image: quay.io/buildah/stable:v1.23.1
    command:
    - cat
    tty: true
    securityContext:
      privileged: true
    volumeMounts:
      - name: varlibcontainers
        mountPath: /var/lib/containers
  volumes:
    - name: varlibcontainers
'''   
    }
  }
  
  options {
    buildDiscarder(logRotator(numToKeepStr: '3'))
    durabilityHint('PERFORMANCE_OPTIMIZED')
    disableConcurrentBuilds()
  }
  
  stages {
    stage('Build with Buildah') {
      steps {
        container('buildah') {
            sh 'buildah build -t crm:v0'
        }
      }
    }
    stage('buildah login') {
      environment {
        DH_CREDS = credentials('Harbor')
      }
      steps {
        container('buildah') {
             sh 'echo $DH_CREDS_PSW | buildah login -u $DH_CREDS_USR --password-stdin registry.kube.local'
        }
      }
    }
    stage('tag image') {
      steps {
        container('buildah') {
          sh 'buildah tag crm:v0 registry.kube.local/public/crm:v0'
        
        }
      }
    }
    stage('push image') {
      steps {
        container('buildah') {
          sh 'buildah push registry.kube.local/public/crm:v0'  
        }
      }
    }
 /*    stage('deploy') {
      agent {    
        kubernetes {
            label 'helm-agent'
            defaultContainer 'jnlp'
            yaml """
            apiVersion: v1
            kind: Pod
            metadata:
              name: helm
            spec:
              containers:
              - name: helm
                image: alpine/helm:latest
                command:
                - cat
                tty: true
            """
        }       
      }
      steps {
        container('helm') {
                    // Inside the helm container, execute Helm commands
                    sh 'helm version'
                    sh 'helm repo add stable https://charts.helm.sh/stable'
                    sh 'helm repo update'
                    sh 'helm install my-release stable/mysql'
                }
      }
    } */
  }
}
























pipeline {
    agent any
    
    environment {
        HARBOR_USERNAME = credentials('harbor-username')
        HARBOR_PASSWORD = credentials('harbor-password')
        HARBOR_REGISTRY = 'https://your-harbor-domain'
        IMAGE_NAME = 'myapp'
        IMAGE_TAG = 'latest'
    }
    
    stages {
        stage('Build') {
            steps {
                script {
                    // Buildah build command to build the Docker image
                    sh "buildah bud -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        }
        
        stage('Push to Harbor') {
            steps {
                script {
                    // Log in to Harbor registry
                    sh "buildah login -u ${HARBOR_USERNAME} -p ${HARBOR_PASSWORD} ${HARBOR_REGISTRY}"
                    
                    // Push the built image to Harbor
                    sh "buildah push ${IMAGE_NAME}:${IMAGE_TAG} ${HARBOR_REGISTRY}/${IMAGE_NAME}:${IMAGE_TAG}"
                }
            }
        }
    }
}
